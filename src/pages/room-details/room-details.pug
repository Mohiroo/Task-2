include ../../components/bullet-list/bullet-list.pug
include ../../components/icon-text-list/icon-text-list.pug
include ../../components/feedback/feedback.pug

+header-anonym
main
  .room__gallery
    .room__gallery-left
      img(src=require("./image.png"))
    .room__gallery-right
      img(src=require("./image2.png"))
      img(src=require("./image3.png"))
  .room__details
    .room__brief
      p.room__text Сведения о номере
      +icon-text-list
    .room__experience
      p.room__text Впечатления от номера
      .room__chart
    .room__feedbacks
      p.room__text Отзывы посетителей номера
        span.room__text-right 2 отзыва
      +feedback('Мурад Сарафанов', '5 дней назад', '12','active', 'ava-1', 'Великолепный матрас на кровати в основной спальне! А пуфик вообще потрясающий. И стены, действительно, шумоподавляющие. Выкрикивал комплименты повару — никто не жаловался из соседей.')
      +feedback('Патрисия Стёклышкова', 'Неделю назад', '2', 'not', 'ava-2', 'Обслуживание на высоте! Всё аккуратно, чисто. Завтраки в номер советую заказать, каждый день новое блюдо и десерт как комплимент')
    .info__rules
      p.room__text Правила
      +bullet-list
    .info__cancel
      p.room__text Отмена
      p.info__text Бесплатная отмена в течение 48 ч. После этого при отмене не позднее чем за 5 дн. до прибытия вы получите полный возврат за вычетом сбора за услуги.
    .room__booking
      +book-card("lux")
+footer-desktop