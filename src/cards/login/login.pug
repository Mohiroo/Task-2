include ./../../components/text-field/text-field.pug
include ./../../components/buttons/buttons.pug

mixin login()
  .login
    .login__card
      .login__form
        p.login__title Войти
        .login__login-details
          +text-field(mode, "email", "Email", "email", "login__email")
          +text-field(mode, "password", "Пароль", "password", "")
        +button("button-4", "Войти", "submit", "login__next")
      .login__registration-account
        p.registration-account__text Уже есть аккаунт на Toxin
        +button("button-2", "Создать", '', '')